<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Product Attribute Form View -->
    <record id="product_attribute_view_form_inherit" model="ir.ui.view">
        <field name="name">product.attribute.form.inherit</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="is_fusion_attribute"/>
            </field>
            <xpath expr="//field[@name='value_ids']/tree" position="inside">
                <field name="fusion_uuid" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>
</odoo>
