<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fusion_product_form" model="ir.ui.view">
        <field name="name">product.template.fusion.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Fusion Data" name="fusion_data">
                    <group>
                        <group>
                            <field name="fusion_uuid" readonly="1"/>
                            <field name="fusion_version" readonly="1"/>
                            <field name="fusion_generated_default_code" readonly="1"/>
                        </group>
                        <group>
                            <field name="fusion_web_url" readonly="1"/>
                            <field name="fusion_shared_link_active" readonly="1"/>
                            <field name="fusion_shared_link_url" readonly="1"/>
                            <field name="fusion_shared_link_download" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="fusion_date_created" readonly="1"/>
                            <field name="fusion_date_modified" readonly="1"/>
                        </group>
                        <group>
                            <field name="fusion_last_sync" readonly="1"/>
                            <field name="fusion_last_updated_by_id" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="fusion_product_search_view" model="ir.ui.view">
        <field name="name">product.template.fusion.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="after">
                <filter string="Fusion Products" name="fusion_products" domain="[('fusion_uuid', '!=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>
