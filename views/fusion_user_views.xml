<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_fusion_user_tree" model="ir.ui.view">
        <field name="name">fusion.user.tree</field>
        <field name="model">fusion.user</field>
        <field name="arch" type="xml">
            <tree string="Fusion Users">
                <field name="name"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="fusion_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_fusion_user_form" model="ir.ui.view">
        <field name="name">fusion.user.form</field>
        <field name="model">fusion.user</field>
        <field name="arch" type="xml">
            <form string="Fusion User">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="display_name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="fusion_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_fusion_user_search" model="ir.ui.view">
        <field name="name">fusion.user.search</field>
        <field name="model">fusion.user</field>
        <field name="arch" type="xml">
            <search string="Search Fusion Users">
                <field name="name"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="fusion_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fusion_user" model="ir.actions.act_window">
        <field name="name">Fusion Users</field>
        <field name="res_model">fusion.user</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_fusion_user_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Fusion users found
            </p>
            <p>
                Users will be automatically created when syncing with Fusion 360.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_fusion_user"
              name="Users"
              parent="menu_fusion_root"
              action="action_fusion_user"
              sequence="30"
              groups="group_fusion_manager"/>
</odoo>
