<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fusion</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <app name="mrp" position="inside">
                <block title="Fusion Integration" name="fusion_setting_container" groups="odoo_fusion.group_fusion_manager">
                    <setting id="fusion_sequence_setting" 
                            title="Configure the sequence for Fusion design references"
                            help="This sequence will be used to generate unique reference numbers for Fusion designs">
                        <field name="fusion_sequence_id" required="1"/>
                        <div class="content-group">
                            <div class="mt8">
                                <p class="text-muted">
                                    The sequence will be used when creating new designs from Fusion 360
                                </p>
                            </div>
                        </div>
                    </setting>
                    <setting id="fusion_product_sequence_setting" 
                            title="Configure the sequence for Fusion product references"
                            help="This sequence will be used to generate unique reference numbers for Fusion products">
                        <field name="fusion_product_sequence_id" required="1"/>
                        <div class="content-group">
                            <div class="mt8">
                                <p class="text-muted">
                                    The sequence will be used when creating new products from Fusion 360 components
                                </p>
                            </div>
                        </div>
                    </setting>
                    <setting id="fusion_product_category_setting" 
                            title="Configure default product category"
                            help="This category will be used as default for new products created from Fusion components">
                        <field name="fusion_default_category_id"/>
                        <div class="content-group">
                            <div class="mt8">
                                <p class="text-muted">
                                    The category will be automatically set when creating new products from Fusion 360 components
                                </p>
                            </div>
                        </div>
                    </setting>
                </block>
            </app>
        </field>
    </record>
</odoo>
